<?xml version="1.0" encoding="utf-8"?>

<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
             xmlns:s="library://ns.adobe.com/flex/spark"
             minHeight="20"
             styleName="ScrollBar">

    <fx:Metadata>
		<![CDATA[
        [HostComponent("spark.components.Button")]
        ]]>
	</fx:Metadata>

    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>

    <s:Rect width="100%"
            height="100%"
            top="1"
            left="1"
            bottom="1"
            right="1">
        <s:fill>
            <s:SolidColor color="0xffffff" />
        </s:fill>
        <s:stroke>
            <s:SolidColorStroke color="{Color.bodySecondary}" />
        </s:stroke>

    </s:Rect>

    <fx:Script><![CDATA[
        import ui.Color;
        ]]></fx:Script>
</s:SparkSkin>