<?xml version="1.0" encoding="utf-8"?>

<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Metadata>
		<![CDATA[
        [HostComponent("spark.components.TextInput")]
        ]]>
	</fx:Metadata>

    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
        <s:State name="normalWithPrompt" />
        <s:State name="disabledWithPrompt" />
    </s:states>

    <s:Group width="100%">

        <s:Rect width="100%"
                height="100%">
            <s:fill>
                <s:SolidColor color="{Color.containerFill}" />
            </s:fill>
            <s:stroke>
                <s:SolidColorStroke color="{Color.bodySecondary}" />
            </s:stroke>
        </s:Rect>

        <s:VGroup width="100%"
                  verticalAlign="middle"
                  padding="10"
                  height="30">
            <s:RichEditableText id="textDisplay"
                                width="100%" />
        </s:VGroup>

    </s:Group>

    <fx:Script><![CDATA[
        import ui.Color;
        ]]></fx:Script>
</s:Skin>